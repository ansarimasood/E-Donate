<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/wall03">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#0a332d">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:id="@+id/post_image"
            android:background="@drawable/clothes"/>


        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/white_screen"
            android:layout_height="wrap_content"
            android:text="Post Quantity"
            android:layout_marginTop="10dp"
            android:padding="2dp"
            android:id="@+id/textQuantity"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Address"
            android:padding="2dp"
            android:textColor="@color/white_screen"
            android:layout_marginTop="2dp"
            android:id="@+id/textAddress"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Time"
            android:padding="2dp"
            android:textColor="@color/white_screen"
            android:layout_marginTop="2dp"
            android:id="@+id/textTime"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status"
            android:padding="2dp"
            android:textColor="@color/white_screen"
            android:layout_marginTop="2dp"
            android:id="@+id/textStatus" />

    </LinearLayout>

</android.support.v7.widget.CardView>
