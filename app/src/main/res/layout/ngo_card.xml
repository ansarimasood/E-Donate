<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/wall03">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#0a332d">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/post_image"
            android:background="@drawable/books"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Name"
            android:padding="2dp"
            android:textColor="@color/white_screen"
            android:layout_marginTop="10dp"
            android:id="@+id/ngobookstextName"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Contact"
            android:padding="2dp"
            android:textColor="@color/white_screen"
            android:layout_marginTop="2dp"
            android:id="@+id/ngobookstextContact"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Email"
            android:padding="2dp"
            android:textColor="@color/white_screen"
            android:layout_marginTop="2dp"
            android:id="@+id/ngobookstextEmail"/>

        <TextView
            android:layout_width="match_parent"
            android:textColor="@color/white_screen"
            android:layout_height="wrap_content"
            android:text="Post Quantity"
            android:layout_marginTop="2dp"
            android:padding="2dp"
            android:id="@+id/ngobookstextQuantity"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Address"
            android:padding="2dp"
            android:textColor="@color/white_screen"
            android:layout_marginTop="2dp"
            android:id="@+id/ngobookstextAddress"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Post Time"
            android:padding="2dp"
            android:textColor="@color/white_screen"
            android:layout_marginTop="2dp"
            android:id="@+id/ngobookstextTime"/>


    </LinearLayout>

</android.support.v7.widget.CardView>
